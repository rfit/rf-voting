{
  "name": "rf-voting",
  "version": "0.5.0",
  "description": "Voting/polling system for Roskilde festival.",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_CONFIG_DIR=src/server/config NODE_ENV=production node src/server/index.js",
    "build": "webpack -p",
    "dev": "parallelshell \"cross-env DEBUG=koa*,css-modules:* NODE_CONFIG_DIR=src/server/config NODE_ENV=development nodemon src/server/index.js\" \"webpack -d --watch\"",
    "lint": "eslint src/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:start": "docker run -d -p 27017:27017 -v $PWD/db/data --name rfvotingdb mongo",
    "db:stop": "docker stop rfvotingdb",
    "db:rm": "docker rm rfvotingdb"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rfit/rf-voting.git"
  },
  "author": "RFIT // Martin Holm Jensen",
  "license": "-",
  "bugs": {
    "url": "https://github.com/rfit/rf-voting/issues"
  },
  "homepage": "https://github.com/rfit/rf-voting#readme",
  "dependencies": {
    "bluebird": "^3.4.6",
    "browser-sync": "^2.15.0",
    "config": "1.21.0",
    "cross-env": "^2.0.1",
    "css-loader": "^0.25.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "isomorphic-fetch": "2.2.1",
    "koa": "^1.2.2",
    "koa-better-body": "^2.0.1",
    "koa-cors": "0.0.16",
    "koa-json": "^1.1.3",
    "koa-logger": "^1.3.0",
    "koa-router": "5.4.0",
    "koa-static": "^2.0.0",
    "koa-views": "^4.1.0",
    "mongoose": "^4.5.8",
    "nunjucks": "^2.5.0",
    "react": "^15.3.0",
    "react-css-modules": "^3.7.10",
    "react-dom": "^15.3.0",
    "react-facebook-login": "^3.2.0",
    "react-fontawesome": "1.1.0",
    "react-redux": "^4.4.5",
    "react-toggle-display": "^2.1.1",
    "redux": "3.6.0",
    "redux-logger": "2.6.1",
    "redux-thunk": "^2.1.0",
    "sass-loader": "^4.0.2",
    "sprintf-js": "^1.0.3",
    "style-loader": "^0.13.1"
  },
  "devDependencies": {
    "babel-core": "^6.13.2",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-node5": "^11.1.0",
    "babel-preset-react": "^6.11.1",
    "browser-sync": "^2.12.8",
    "eslint": "^3.4.0",
    "eslint-config-standard": "^6.0.0",
    "eslint-config-standard-jsx": "^3.0.0",
    "eslint-config-standard-react": "^4.0.0",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-react": "^6.1.2",
    "eslint-plugin-standard": "^2.0.0",
    "node-sass": "^3.9.3",
    "nodemon": "^1.10.0",
    "parallelshell": "^2.0.0",
    "sass-loader": "^4.0.2",
    "webpack": "^1.13.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "node5"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "standard",
      "standard-react"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "impliedStrict": true,
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "no-confusing-arrow": 0,
      "react/jsx-quotes": 0,
      "no-multi-spaces": [
        1,
        {
          "exceptions": {
            "VariableDeclarator": true,
            "ImportDeclaration": true
          }
        }
      ]
    }
  }
}
