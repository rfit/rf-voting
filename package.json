{
  "name": "rf-voting",
  "version": "1.0.0",
  "description": "A simple voting system for Roskilde festival.",
  "main": "index.js",
  "scripts": {
    "start": "node src/server/index.js",
    "build": "webpack -p",
    "dev": "parallelshell \"nodemon src/server/index.js\" \"webpack -d --watch\"",
    "lint": "eslint src/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:start": "docker run -d -p 27017:27017 -v $PWD/db/data --name rfvotingdb mongo",
    "db:stop": "docker stop rfvotingdb",
    "db:rm": "docker rm rfvotingdb"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rfit/rf-voting.git"
  },
  "author": "RFIT",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rfit/rf-voting/issues"
  },
  "homepage": "https://github.com/rfit/rf-voting#readme",
  "dependencies": {
    "koa": "^1.2.1",
    "koa-bodyparser": "^2.2.0",
    "koa-cors": "0.0.16",
    "koa-route": "^2.4.2",
    "koa-static": "^2.0.0",
    "koa-views": "^4.1.0",
    "mongoose": "^4.5.8",
    "nunjucks": "^2.4.2",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "reqwest": "^2.0.5"
  },
  "devDependencies": {
    "babel-core": "^6.13.2",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "eslint": "^3.4.0",
    "eslint-config-standard": "^6.0.0",
    "eslint-config-standard-jsx": "^3.0.0",
    "eslint-config-standard-react": "^4.0.0",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-react": "^6.1.2",
    "eslint-plugin-standard": "^2.0.0",
    "nodemon": "^1.10.0",
    "parallelshell": "^2.0.0",
    "webpack": "^1.13.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "standard",
      "standard-react"
    ],
    "rules": {
      "no-multi-spaces": [
        1,
        {
          "exceptions": {
            "VariableDeclarator": true,
            "ImportDeclaration": true
          }
        }
      ]
    }
  }
}
